@model MVC.Models.Product

<h2>Thêm mới sản phẩm & dịch vụ</h2>

<form asp-action="CreateProducts" method="post" class="form">
    <div class="form-group">
        <label>ProductId</label>
        <input asp-for="ProductId" class="form-control" />
    </div>
    <div class="form-group">
        <label>Product Name</label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Product category</label>
        <input asp-for="ProductCategory" class="form-control" />
    </div>
    <div class="form-group">
        <label>Product Price</label>
        <input asp-for="ProductPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label>Product Stock</label>
        <input asp-for="ProductStock" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Thêm</button>
    <a href="/Home/Sanpham" class="btn btn-success">Hủy</a>
</form>
