@model PetListViewModel

<h2>Trang quản lý thú cưng</h2>

<input type="text" id="searchBox" class="form-control mb-3" placeholder="Tìm kiếm theo tên thú cưng..." />

<div class="form-check mb-3">
    <input class="form-check-input" type="checkbox" value="true" id="onlyAvailableCheckbox">
    <label class="form-check-label" for="onlyAvailableCheckbox">
        Chỉ hiện thú cưng chưa bán
    </label>
</div>

<div id="petListContainer">
    @await Html.PartialAsync("_PetListPartial.cshtml", Model)
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function loadPets(keyword = "", page = 1) {
            const onlyAvailable = $('#onlyAvailableCheckbox').is(':checked');
            $.ajax({
                url: '/Pet/LoadPetsPartial',
                data: { keyword: keyword, page: page, onlyAvailable: onlyAvailable },
                success: function (data) {
                    $('#petListContainer').html(data);
                }
            });
        }

        $(document).ready(function () {
            $('#searchBox').on('input', function () {
                loadPets($(this).val(), 1);
            });

            $('#onlyAvailableCheckbox').on('change', function () {
                loadPets($('#searchBox').val(), 1);
            });

            $(document).on('click', '.page-link', function (e) {
                e.preventDefault();
                const page = $(this).data('page');
                loadPets($('#searchBox').val(), page);
            });

            @if (TempData["Success"] != null)
                {
                    <text>
                        Swal.fire({
                            icon: 'success',
                        title: 'Thành công!',
                        text: '@TempData["Success"]',
                        confirmButtonText: 'OK'
                    });
                    </text>
            }
    });

    </script>
}
