@model MVC.Models.Pet

<h2>Thêm thú cưng mới</h2>

<!-- Hiển thị thông báo thành công nếu có -->
<!-- Hiển thị thông báo thành công nếu có -->

<!-- Hiển thị lỗi từ ModelState nếu có -->
@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <div class="alert alert-danger">
        @error.ErrorMessage
    </div>
}

<form asp-action="CreatePets" method="post" class="form">
    <div class="form-group">
        <label>PetId</label>
        <input asp-for="PetId" class="form-control" />
        <span asp-validation-for="PetId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Tên</label>
        <input asp-for="PetName" class="form-control" />
        <span asp-validation-for="PetName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Loại</label>
        <input asp-for="PetType" class="form-control" />
        <span asp-validation-for="PetType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Giống</label>
        <input asp-for="Breed" class="form-control" />
        <span asp-validation-for="Breed" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Tuổi</label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Giới tính</label>
        <input asp-for="Gender" class="form-control" />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Giá</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Số lượng</label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Thêm</button>
    <a href="/Thucung" class="btn btn-success">Hủy</a>
</form>


