<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Cửa hàng Thú cưng</title>

    <!-- Bootstrap và SweetAlert2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <!-- Các file CSS local -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true" />

    <style>
        .choices:hover,
        .choices.active {
            background-color: aqua !important;
            color: #f38c8c !important;
        }
        .navbar-toggler{
            margin-top: 10px !important;
        }
        .nav-item{
            font-weight: bold; 
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold px-2" asp-area="" asp-controller="Home" asp-action="Intro" style="background-color: #a1d6e0; font-size: 1.75rem;">
                    Cửa hàng thú cưng Petcares 😺
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark choices @(ViewContext.RouteData.Values["controller"]?.ToString() == "Pet" ? "active" : "")"
                               asp-area="" asp-controller="Pet" asp-action="Index">Thú cưng 🐶</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark choices @(ViewContext.RouteData.Values["controller"]?.ToString() == "Customer" ? "active" : "")"
                               asp-area="" asp-controller="Customer" asp-action="Index">Khách hàng 🤓</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark choices @(ViewContext.RouteData.Values["controller"]?.ToString() == "Product" ? "active" : "")"
                               asp-area="" asp-controller="Product" asp-action="Index">Sản phẩm & Dịch vụ 😻</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark choices @(ViewContext.RouteData.Values["controller"]?.ToString() == "Order" ? "active" : "")"
                               asp-area="" asp-controller="Order" asp-action="Index">Hóa đơn 😿</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container text-center">
            &copy; 2025 - MVC - <a href="#">JAJAJAA</a>
        </div>
    </footer>

    <!-- JS Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
